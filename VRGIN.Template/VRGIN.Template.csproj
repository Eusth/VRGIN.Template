    <Copy SourceFiles="@(FilesToCopy)" DestinationFolder="$(GameDirectory)\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>
  <Target Name="Clean">
    <RemoveDir Directories="$(OutputPath)" />
  </Target>
